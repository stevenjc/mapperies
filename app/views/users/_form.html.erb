<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>
<%error_list(:email).to_a.each do |msg|%>
    <%= render :layout =>'layouts/sign_up_alert' do %>
        <%msg%>
    <%end%>
<%end%>


<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
<%error_list(:password).to_a.each do |msg|%>
    <%= render :layout =>'layouts/sign_up_alert' do %>
        <%msg%>
    <%end%>
<%end%>


<div class="first-name-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name %>
</div>

<div class="last-name-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name %>
</div>

<div class="birthday-field">
  <%= form.label :birthday%>
  <%= form.date_field :birthday %>
</div>


<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being registered:</h2>
  </div>
<% end %>
