   <% if @nav_bar %>
     <nav id="sidebar-wrapper">
      <ul class="sidebar-nav">
    <a id="menu-close" href="#" class="btn btn-light btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
        <li class="sidebar-brand">
          <a href="/main"  onclick = $("#menu-close").click();>
              <i class="fa fa-home fa-fw"><span class="sidebar_text">Mapperies</span></i>
          </a>
        </li>
        <li>
          <a href="/account/settings" onclick = $("#menu-close").click();><i class="fa fa-user fa-fw fa-2x"><span class="sidebar_text">Account</span></i></a>
        </li>
