<section id="portfolio" class="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <h2><%= User.where(id: params[:id]).first.first_name%>'s Albums</h2>
                    <hr class="small">
                    <div class="row">

                      <table>
                          <tbody>
                            <% if @albums.blank? && @galleries_viewonly.blank? && @galleries_upload.blank? %>
                              <p> This friend doesn't have any albums yet </p>

                            <% else %>
                              <div>
                                <% if !@albums.blank? %>
                                  <% @albums.each do |album| %>
                                  <!-- %= render :layout =>'layouts/listbackground' do % -->
                                  <div class="col-sm-4 col-md-2">
                                    <div class="thumbnail text-center">
                                      <%if sample_photo(album.id)%>
                                        <%=image_tag sample_photo(album.id).image.url(:med), id:"album_image"%>
                                      <%else%>
                                        <%=image_tag "480px-Placeholder.png", id:"placeholder"%>
                                      <%end%>
                                      <div class="caption overflow">
                                        <p><%= link_to album.album_name, album, id: "album_name_listing"%></p>
                                      </div>
                                      <br/>
                                  </div>
                                  <% end %>
                                <% end %>
                                <% if !@galleries_viewonly.blank? %>
                                  <% @galleries_viewonly.each do |gallery| %>
                                  <div class="col-sm-4 col-md-2">
                                    <div class="thumbnail text-center">
                                      <%if sample_photo(gallery.id)%>
                                        <%=image_tag sample_photo(gallery.id).image.url(:med), id:"album_image"%>
                                      <%else%>
                                        <%=image_tag "480px-Placeholder.png", id:"placeholder"%>
                                      <%end%>
                                      <div class="caption overflow">
                                        <p><%= link_to gallery.album_name, gallery, id: "album_name_listing"%></p>
                                      </div>
                                      <br/>
                                  </div>
                                  <% end %>
                                <% end %>
                                <% if !@galleries_upload.blank? %>
                                  <% @galleries_upload.each do |gallery| %>
                                  <div class="col-sm-4 col-md-2">
                                    <div class="thumbnail text-center">
                                      <%if sample_photo(gallery.first.id)%>
                                        <%=image_tag sample_photo(gallery.first.id).image.url(:med), id:"album_image"%>
                                      <%else%>
                                        <%=image_tag "480px-Placeholder.png", id:"placeholder"%>
                                      <%end%>
                                      <div class="caption overflow">
                                        <p><%= link_to gallery.last, gallery.first, id: "album_name_listing"%></p>
                                      </div>
                                      <br/>
                                  </div>
                                  <% end %>
                                <% end %>
                              </div>
                            <% end %>

                          </tbody>
                        </table>
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
