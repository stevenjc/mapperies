<h1>Edit Album</h1>

<%= image_tag @album.image.url(:med) %>

<%= form_for @album, :method => :post, :html => {:multipart => true} do |a| %>
  <div class="form-group">
    <%= a.label :cover %>
    <%= a.file_field :cover %>
    <!-- <#%= file_field_tag "cover", type: :file%> -->
  </div>

  <%= a.submit 'Upload Cover' %>
<% end %>
