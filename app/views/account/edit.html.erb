<form>
    <div class="form-group">
        <label>Email address</label>
        <%= email_field_tag 'user_email', @user.email , class:'form-control' %>
    </div>

    <div class='form-group'>
        <label>User Name </label>
        <%= text_field_tag 'user_name', @user.user_name, class:'form-control'%>
    </div>

    <div class='form-group'>
        <label>First Name </label>
        <%= text_field_tag 'first_name', @user.first_name, class:'form-control'%>
    </div>

    <div class='form-group'>
        <label>Last Name </label>
        <%= text_field_tag 'last_name', @user.last_name, class:'form-control'%>
    </div>

    <div class='form-group'>
        <label> Birthday </label>
        <%= date_field_tag 'birthday', @user.birthday, class:'form-control'%>
    </div>


    <button type="submit" class="btn btn-default">Submit</button>
</form>
