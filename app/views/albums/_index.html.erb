<% if @albums.blank? %>
<p>No albums yet </p>
<% else %>
  <% @albums.each do |album| %>
    <div class="col-sm-4 col-md-2">
      <div class="thumbnail">
        <%if sample_photo(album.first.id)%>
          <%=image_tag sample_photo(album.first.id).image.url(:med), id:"image"%>
        <%end%>
        <div class="caption">
          <p id="album_name_listing">
            <%= link_to album.last, album.first, :style=>'color: black;'%>
          </p>
          <p><%= link_to 'Destroy', album.first, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
