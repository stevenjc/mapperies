<p id="notice"><%= notice %></p>
<p>
  <strong>Name the new album:</strong>
</p>

<%= form_tag "create", method: "post"  do %>
  <%= text_field_tag 'album_name' %>
  <%= submit_tag("Create") %>
<% end %>

<% if @photos.blank? %>
  <p> You don't have any photos yet </p>
  <p> Your ID: <%= current_user.id %> </p>
<% else %>
  <h2><% @photos.count %></h2>
<% end %>


<%= link_to 'Back', albums_path %>

