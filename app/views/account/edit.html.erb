<%= javascript_include_tag "/js/setProfilePicture.js" %>
<section id="portfolio" class="primary">

<div class="text-label-field">
    <h1>Edit Account</h1>
</div>


<div class="col-md-12">
    <%= form_for @user, url: {action: "save"}, html: {id: "account_edit_form"} do |f| %>

        <%=label_tag :Email, "Email", class: "account_edit_form_label"%>
        <div class = "form-group">
            <%= f.text_field :email%>
        </div>

        <%=label_tag :First_Name, "First Name", class: "account_edit_form_label"%>
        <div class = "form-group">
            <%= f.text_field :first_name%>
        </div>

        <%=label_tag :Last_Name, "Last Name", class: "account_edit_form_label"%>
        <div class = "form-group">
            <%= f.text_field :last_name%>
        </div>

        <%=label_tag :User_Name, "User Name", class: "account_edit_form_label"%>
        <div class = "form-group">
            <%= f.text_field :user_name%>
        </div>

        <%=label_tag :Birthday, "Birthday", class: "account_edit_form_label"%>
        <div class = "form-group">
            <%= f.date_field :birthday%>
        </div>

        <div class = "form-group">
            <%=label_tag :avatar_id, "avatar", class: "account_edit_form_label"%>
            <%= f.text_field :avatar_id, id:"avatar_id"%>
        </div>




        <%= button_tag(type: 'button', class: "btn btn-primary", "data-toggle"=> "modal", "data-target"=> "#confirm_edit") do %>
            Update
        <% end %>

        <a href="/account/settings" class="btn btn-warning">
            Cancel
        </a>

        <div class="modal fade" tabindex="-1" role="dialog" id="confirm_edit">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Are sure you want to save changes?</h4>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="confirm_edit_button">Save changes</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->



    <% end %>
    <% if @photo %>
      <% @photo.each do |p| %>
        <%=image_tag p.image.url(:med), id:p.id, class:"photo"%>
      <%end %>
    <% end %>
    <br>
</div>
</section>