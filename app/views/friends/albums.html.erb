<h3>Albums of Friend <% %> </h3>

<section id="portfolio" class="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <h2>Friend's Albums</h2>
                    <hr class="small">
                    <div class="row">

                      <table>
                          <tbody>
                            <p>Your ID is: <%= current_user.id %> </p>
                            <p>The friend you are looking at is: <%= params[:id] %></p>
                            <% if @albums.blank? %>
                            <p> This friend doesn't have any albums yet </p>
                            <% else %>
                              <% @albums.each do |album| %>
                              <!--%= render :layout =>'layouts/listbackground' do %-->
                              <tr>
                                <td><div><%= album.album_name %></div></td>
                                <td><%= link_to 'See', album %></td>
                                
                              </tr>
                              <% end %>
                            <% end %>

                          </tbody>
                        </table>

                    <!-- /.row (nested) -->
                    <a href="#" class="btn btn-dark">View More Items</a>
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
