<% if @albums.blank? %>
  <h3 class="no_albums_header text-center"> No Albums Were Created </h3>
  <%= image_tag "empty_album.jpg", class:"empty_album_image col-md-offset-4" %>
<% else %>
  <% @albums.each do |album| %>
    <div class="col-sm-4 col-md-2">
      <div class="thumbnail text-center">
        <%if sample_photo(album.first.id)%>
          <%=image_tag sample_photo(album.first.id).image.url(:med), id:"album_image"%>
        <%else%>
          <%=image_tag "480px-Placeholder.png", id:"placeholder"%>
        <%end%>
        <div class="caption overflow">
          <p>
            <%= link_to album.last, album.first, id: "album_name_listing"%>
          </p>
        </div>
        <br/>
        <%= link_to 'Delete', album.first, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%>
      </div>
    </div>
  <% end %>
<% end %>
